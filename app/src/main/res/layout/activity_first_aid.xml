<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.parth.android.Main2Activity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="200dp"
                    card_view:cardElevation="32dp">

                    <TextView
                        android:id="@+id/txt_heavy_bleeding"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Heavy Bleeding"
                        android:gravity="center"
                        android:textSize="28sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:background="#fa9f81"
                        android:textColor="#fff"/>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view2"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    card_view:cardElevation="8dp">

                    <TextView
                        android:background="#f7a1a1"

                        android:id="@+id/txt_choking"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Choking"
                        android:gravity="center"
                        android:textSize="28sp"
                        android:fontFamily="sans-serif-smallcaps"

                        android:textColor="#000"/>

                </android.support.v7.widget.CardView>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view3"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    card_view:cardElevation="8dp">

                    <TextView
                        android:id="@+id/txt_snake_bite"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Snake/Insect Bite "
                        android:gravity="center"
                        android:textSize="28sp"
                        android:fontFamily="sans-serif-smallcaps"

                        android:background="#a9a"

                        android:textColor="#000"/>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view4"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    card_view:cardElevation="64dp">

                    <TextView
                        android:id="@+id/txt_burn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Burn"
                        android:gravity="center"
                        android:textSize="28sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:background="#b46363"

                        android:textColor="#fff"/>

                </android.support.v7.widget.CardView>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view5"
                    android:layout_gravity="center"
                    android:layout_width="00dp"
                    android:layout_weight="1"
                    android:layout_height="200dp"
                    card_view:cardElevation="32dp">

                    <TextView
                        android:id="@+id/txt_muscle_fracture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Muscle fracture/Dislocation"
                        android:gravity="center"
                        android:background="#2e0b06"
                        android:textSize="28sp"
                        android:fontFamily="sans-serif-smallcaps"

                        android:textColor="#fff"/>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view6"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    card_view:cardElevation="8dp">

                    <TextView
                        android:id="@+id/txt_seizure"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Seizure"
                        android:background="#f9c5af"
                        android:gravity="center"
                        android:textSize="28sp"
                        android:fontFamily="sans-serif-smallcaps"

                        android:textColor="#000"/>

                </android.support.v7.widget.CardView>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view7"
                    android:layout_gravity="center"
                    android:layout_width="00dp"
                    android:layout_weight="1"
                    android:layout_height="200dp"
                  >

                    <TextView
                        android:id="@+id/txt_sprain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Sprain"
                        android:gravity="center"
                        android:textSize="28sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:background="#dcdcdc"
                        android:textColor="#000"/>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view8"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    card_view:cardElevation="180dp">

                    <TextView
                        android:id="@+id/txt_hypothermia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Hypothermia"
                        android:gravity="center"
                        android:textSize="28sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:background="#1a110a"
                        android:textColor="#fff"/>

                </android.support.v7.widget.CardView>


            </LinearLayout>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_first_aid"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="150dp"
                card_view:cardElevation="32dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_first_aid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="What should you carry in your first Aid box?"
                        android:gravity="center"
                        android:textSize="28sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:background="#c38292"

                        android:textColor="#fff"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_disaster_prep_kit"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="200dp"
                card_view:cardElevation="28dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_disaster_prep_kit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="What should you carry in your Disaster Preparedness Kit?"
                        android:gravity="center"
                        android:textSize="28sp"
                        android:background="#D7CCC8"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textColor="#000"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>


    </LinearLayout>
</ScrollView>