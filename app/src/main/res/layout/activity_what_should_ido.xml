<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_what_should_ido"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="user.admin.com.myapplication.WhatShouldIDo">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="16dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:id="@+id/what_tsunami"
                android:src="@drawable/tsunami"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Tsunami"
                android:layout_alignParentBottom="true"
                android:textColor="#fff"
                android:gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="32sp"/>

        </RelativeLayout>




    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:id="@+id/what_hurricane"
                android:src="@drawable/hurricane"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Hurricane"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:textColor="#fff"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="32sp"/>

        </RelativeLayout>




    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"

>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/what_earthquake"
                android:scaleType="centerCrop"
                android:src="@drawable/earthquake"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Earthquakes"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:textColor="#fff"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="32sp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/volcano"
                android:layout_alignParentStart="true"
                android:id="@+id/what_volcano" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Volcanic Eruption"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:textColor="#fff"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="32sp"/>


        </RelativeLayout>




    </android.support.v7.widget.CardView>



</LinearLayout>


</ScrollView>
